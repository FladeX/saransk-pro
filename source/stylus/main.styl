$footer-height = 97px

html
body
.b-page
  height 100%

b
strong
  font-weight bold

.i-clearfix:before
.i-clearfix:after
  content ''
  display table

.i-clearfix:after
  clear both

.i-clearfix
  zoom 1

.b-main
  background #f0f0f0
  min-height 100%
  height auto !important
  height 100%
  margin 0 auto - $footer-height
  &__wrapper
    background #fff
    margin 0 auto
    width 1060px

.b-header
  padding 20px 30px
  &__brand
    float left
    width 40%
    &-link
      text-decoration none
      &:hover
        text-decoration none
    &-logo
      float left
      margin-right 10px
    &-name
      color #e35828
      font-size 31px
      margin-top 14px
      text-transform uppercase
    &-city
      color #191919
      font-size 36px
      font-weight bold
    &-slogan
      color #191919
      font-size 15px
  &__contacts
    background url('../images/phone.png') no-repeat
    float right
    margin-top 14px
    padding-left 40px
    text-align right
    width 20%
    &-incity
      color #6a6a6a
      font-size 11px
      text-transform uppercase
      &-phone
        color #e35828
        font-size 23px
        font-weight bold
    &-8800
      color #191919
      font-size 23px
      font-weight bold

.b-footer
  background #759345
  color #fff
  height $footer-height
  overflow-y hidden
  &__wrapper
    margin 0 auto
    padding 30px
    width 1060px
  &__copyright
    background url('../images/logo_footer.png') no-repeat
    box-sizing border-box
    float left
    padding 10px 0 15px 55px
    width 20%
    &-title
      font-size 13px
      text-transform uppercase
    &-description
      font-size 11px
  &__menu
    float left
    padding-top 10px
    width 60%
    &-list
      font-size 14px
      margin-left 120px
    &-item
      float left
      padding 0 15px
    &-link
      border-bottom 1px solid #fff
      color #fff
      text-decoration none
      &:hover
        border none
        text-decoration none
  &__counters
    float right
    padding-top 5px
    text-align right
    width: 20%
