  zoom 1

.b-main
  min-height 100%
  height auto !important
  height 100%
  margin 0 auto -97px

.b-footer
  background #759345
  color #fff
  height 97px
  overflow-y hidden
  &__wrapper
    margin 0 auto
    padding 30px
    width 1060px
  &__copyright
    background url('../images/logo_footer.png') no-repeat
    box-sizing border-box
    float left
    padding 10px 0 15px 55px
    width 20%
    &-title
      font-size 13px
      text-transform uppercase
    &-description
      font-size 11px
  &__menu
    float left
    padding-top 10px
    width 60%
    &-list
      font-size 14px
      margin-left 120px
    &-item
      float left
      padding 0 15px
    &-link
      border-bottom 1px solid #fff
      color #fff
      text-decoration none
      &:hover
        border none
        text-decoration none
  &__counters
    float right
    padding-top 5px
    text-align right
    width: 20%
